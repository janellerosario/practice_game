{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build GameViewer",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/CSharp/GameViewer/GameViewer.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish GameViewer (netstandard2.1 - x64)",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"--self-contained",
				"--framework",
				"netstandard2.1",
				"--runtime",
				"win-x64",
				"${workspaceFolder}/CSharp/GameViewer/GameViewer.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run GameViewer (DEBUG - netstandard2.1 - x64)",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/CSharp/GameViewer",
				"--framework",
				"netstandard2.1",
				"--configuration",
				"Debug"
			],
			"problemMatcher": "$msCompile"
		}
	]
}